#!/usr/bin/env node
/* eslint-disable @typescript-eslint/no-var-requires */

const yargs = require("yargs");

const { launch } = require("../dist");

const cliParser = yargs
  .usage("Usage: puppeteer-worker")
  .option("worker-type", {
    type: "string",
    requiresArg: false,
    choices: ["http", "rabbit", "rabbit_v1", "standalone"],
  })
  .option("rabbitmq", {
    describe: "the rabbitmq connection string",
    type: "string",
    requiresArg: false,
  })
  .option("log-dest", {
    type: "string",
    requiresArg: false,
    choices: ["cs", "fs"],
  })
  .option("max-try", {
    type: "number",
    requiresArg: false,
  })
  .option("access-token", {
    type: "string",
    requiresArg: false,
  })
  .option("http-worker-pull-config-url", {
    type: "string",
    requiresArg: false,
  })
  .option("config-file", {
    type: "string",
    requiresArg: false,
  });
const options = cliParser.argv;

launch({
  configFile: options.configFile,
  workerId: options.workerId,
  workerType: options.workerType,
  logDest: options.logDest,
  secret: options.secret,
  httpWorkerPullConfigUrl: options.httpWorkerPullConfigUrl,
  accessToken: options.accessToken,
  rabbitmqConnectionString: options.rabbitmq,
  maxTry: options.maxTry,
});
